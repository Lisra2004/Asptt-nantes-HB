{% extends 'AboutBundle::base.html.twig' %}

{% block content %}
    <h1>Member</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ member.lastName }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ member.firstName }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{% if member.birthdate %}{{ member.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ member.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ member.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>Licencenumber</th>
                <td>{{ member.licenceNumber }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ member.sex }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('member_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('member_edit', { 'id': member.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
